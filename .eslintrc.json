{
    "extends": "standard",
    "plugins": [
        "standard",
        "promise",
        "react"
    ],
    "env": {
        "node": true
    },
    "rules": {
        "indent": ["error", "tab"],
        "no-unused-vars":"warn",
        "no-tabs": 0,
        "no-path-concat":"off"
    },
    "parserOptions": {
        "ecmaVersion": 2017,
        "ecmaFeatures": {
            "jsx": true
        }
    }
}