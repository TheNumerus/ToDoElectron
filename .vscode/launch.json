{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Main Process",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "preLaunchTask": "Build",
      "sourceMaps": true,
      "outFiles": [ "${workspaceRoot}/bin/**/*.js" ],
      "skipFiles": [
        "<node_internals>/**/*.js"
      ],
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
      "args" : ["."],
      "protocol": "inspector"
    }
  ]
}