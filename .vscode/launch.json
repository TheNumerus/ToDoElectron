{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Main Process",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "preLaunchTask": "watch",
      "sourceMaps": true,
      "outFiles": [ "${workspaceRoot}/bin/**/*.js" ],
      "skipFiles": [
        "<node_internals>/**/*.js"
      ],
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
      },
      "program": "${workspaceRoot}/bin/main.js",
      "protocol": "legacy"
    }
  ]
}