{
    "version": "2.0.0",
    "tasks": [
        {
            "command": "${workspaceRoot}/node_modules/.bin/babel src --out-dir bin --source-maps --copy-files",
            "taskName": "compile",
            "type": "shell"
        },
        {
            "command": "${workspaceRoot}/node_modules/.bin/node-sass src/ -o bin/",
            "taskName": "css",
            "type": "shell"
        },
        {
            "taskName": "Build",
            "dependsOn": [
                "compile",
                "css"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}