{
    "version": "2.0.0",
    "tasks": [
        {
            "command": "${workspaceRoot}/node_modules/.bin/babel",
            "args": [
                "src",
                "--out-dir",
                "bin",
                "--source-maps",
                "--copy-files"
            ],
            "taskName": "compile",
            "suppressTaskName": true,
            "isBackground": false,
            "isShellCommand": true
        },
        {
            "command": "node-sass",
            "args": [
                "src/css",
                "-o",
                "bin/css"
            ],
            "taskName": "css",
            "suppressTaskName": true,
            "isBackground": false,
            "isShellCommand": true
        },
        {
            "taskName": "Build",
            "dependsOn": [
                "compile",
                "css"
            ],
            "isBuildCommand": true,
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}